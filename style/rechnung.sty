  \vspace{5mm}
  
}
\newcommand{\umsatzsteuer}[1]{\def\umsatzst{#1}}
\newcommand*\us{\umsatzst}
\newcommand*\es{0}
\newcommand*\gez{0}
\newcommand*\rest{0}
\newcommand*\gesamtbetrag[1]{
  \nprounddigits{2}
  \FPdiv\rsumprint\rsum{3}
  \FPmul\us\us{.01}
  \FPmul\us\us\rsumprint
  \FPadd\es\rsumprint\us
  \ifthenelse{\equal{#1}{}}{
    % Keine Anzahlung geleistet
    \ifthenelse{\equal{\ust}{}}{
      % Keine Umsatzsteuernummer -> Kleinunternehmerregelung nach ยง 19 UStG
      \begin{tabularx}{\textwidth}{@{}X r r@{}}
        \hline
        \platz & \multicolumn{1}{r}{\textbf{\totaltext}} & \textbf{\numprint{\FPprint\rsumprint}\ \euro}
      \end{tabularx}\\[5mm]
      \kleinunternehmer
    }{
      % Umsatzsteuernummer definiert -> Umsatzsteuer ausweisen
      \begin{tabularx}{\textwidth}{@{}X r r@{}}
        \hline
        \platz & \multicolumn{1}{r}{\nettosumtext} & \numprint{\FPprint\rsumprint}\ \euro \\
        \platz & \multicolumn{1}{r}{\usttext\ \umsatzst\%} & \numprint{\FPprint\us}\ \euro \\
        \cline{2-3}
        \platz & \multicolumn{1}{r}{\textbf{\bruttosumtext}} & \textbf{\numprint{\FPprint\es}\ \euro}
      \end{tabularx}}
  }{%
    % Es wurde bereits eine Anzahlung geleistet
    \ifthenelse{\equal{\ust}{}}{
      % Keine Umsatzsteuernummer -> Kleinunternehmerregelung nach ยง 19 UStG
      \FPset\gez{#1}%
      \FPsub\rest\rsumprint\gez
      \begin{tabularx}{\textwidth}{@{}X r r@{}}
        \hline
        \platz & \multicolumn{1}{r}{\textbf{\totaltext}} & \textbf{\numprint{\FPprint\rsumprint}\ \euro} \\[5mm]
        \platz & \multicolumn{1}{r}{\geztext} & \numprint{\FPprint\gez}\ \euro \\
        \cline{2-3}
        \platz & \multicolumn{1}{r}{\textbf{\resttext}} & \textbf{\numprint{\FPprint\rest}\ \euro} \\[5mm]
      \end{tabularx}\\[5mm]
      \kleinunternehmer
    }{
      % Umsatzsteuernummer definiert -> keine Kleinunternehmerregelung
      \FPset\gez{#1}%
      \FPsub\rest\es\gez
      \begin{tabularx}{\textwidth}{@{}X r r@{}}
        \hline
        \platz & \multicolumn{1}{r}{\nettosumtext} & \numprint{\FPprint\rsumprint}\ \euro \\
        \platz & \multicolumn{1}{r}{\usttext\ \umsatzst\%} & \numprint{\FPprint\us}\ \euro \\
        \cline{2-3}
        \platz & \multicolumn{1}{r}{\textbf{\bruttosumtext}} & \textbf{\numprint{\FPprint\es}\ \euro} \\[5mm]
        \platz & \multicolumn{1}{r}{\geztext} & \numprint{\FPprint\gez}\ \euro \\
        \cline{2-3}
        \platz & \multicolumn{1}{r}{\textbf{\resttext}} & \textbf{\numprint{\FPprint\rest}\ \euro}
      \end{tabularx}
    }%
  }%
  \npnoround
  
  \vspace{5mm}
  
}

